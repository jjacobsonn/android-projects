<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Investment Name -->
        <TextView
            android:id="@+id/investmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500" />

        <!-- Amount Invested Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount Invested"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!-- Amount Invested Value -->
        <TextView
            android:id="@+id/amountInvested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <!-- Return Rate Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Rate"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!-- Return Rate Value -->
        <TextView
            android:id="@+id/returnRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <!-- Total Growth Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Growth"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!-- Total Growth Value -->
        <TextView
            android:id="@+id/totalGrowth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <!-- Delete Button -->
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
